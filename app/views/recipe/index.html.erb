<div>
  <h1 class="text-center">Recipes</h1>
</div>
<div class="row row-cols-1 row-cols-md-2">
  <% if @entries.empty? %>
    No recipes found!
  <% end %>
  <% @entries.each do |entry| %>
    <div class="col mb-4">
      <div class="card">
        <%= link_to recipe_show_path(entry.id) do %>
          <%= image_tag("#{https_image_url(entry.fields[:photo].url)}", class: "card-img-top")%>
        <%end%>
        <div class="card-body">
          <h5 class="card-title"><%= entry.fields[:title] %></h5>
        </div>
      </div>
    </div>
  <% end %>
</div>